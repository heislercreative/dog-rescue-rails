<h3><%= @dog.name %></h3>

<br>
<div class="info">
  <h4><em><%= link_to @dog.breed.name, @dog.breed %></em></h4>
  <h5><%= @dog.gender %> - <%= @dog.age %> years old</h5>
  <h5><%= is_trained?(@dog) %></h5>
  <h5>Adoption Fee: $<%= @dog.fee %></h5>
</div>
<br>
<div class="description">
  <h4>About <%= @dog.name %>:</h4>
  <p><%= @dog.description %></p>
</div>

<%= render 'edit_or_adopt' %>

<% if @dog.user == current_user %>
  <strong><%= link_to 'Return Home', root_path %></strong>
<% else %>
  <strong><%= link_to 'Return to All Dogs', dogs_path %></strong>
<% end %>
