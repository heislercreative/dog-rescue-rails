<% if @user.errors.any? %>
  <div class="alert alert-warning" role="alert">
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-warning" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
