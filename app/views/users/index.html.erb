<h3>All Users</h3>

<br>
<%= render 'notice' %>

<ul>
  <% @users.each do |user| %>
    <li>
      <strong><%= user.name %></strong>
      <%= form_for user do |f| %>
        Admin:
        <%= f.radio_button :admin, true %> Yes
        <%= f.radio_button :admin, false %> No
        <%= f.submit 'Update', class: "btn btn-default sm-btn" %>
      <% end %>
      <%= form_tag user_path(user), method: "delete" do %>
        <%= submit_tag "Delete", class: "btn btn-danger sm-btn", data: { confirm: "Are you sure you want to delete #{user.name}?"} %>
      <% end %>
    </li>
  <% end %>
</ul>
