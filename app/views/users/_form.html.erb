<%= render 'notice' %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :email %>
  <%= f.email_field :email %><br><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.label 'Confirm Password' %><br>
  <%= f.password_field :password_confirmation %><br><br>

  <%= f.hidden_field :admin %>

  <%= f.submit 'Sign Up', class: "btn btn-success" %>

<% end %>
