<h3>Welcome <%= @user.name %></h3>

<br>
<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <% if !@adopted_dogs.empty? %>
        <hr>
        <h4>My Adopted Dogs</h4>
        <ul>
          <% @adopted_dogs.each do |dog| %>
          <li><%= link_to dog.name, dog %></li>
          <% end %>
        </ul>
      <% end %>
      <% if !@attending_events.empty? %>
        <hr>
        <h4>Events I'm Attending</h4>
          <%= render partial: 'events/event_list', locals: {events: @attending_events} %>
      <% end %>
    </div>

    <div class="col-sm-4">
      <%= link_to 'New Event', new_user_event_path(@user), class: 'btn btn-primary' %>
      <hr>
      <h4>Upcoming Events</h4>
      <%= render partial: 'events/event_list', locals: {events: @events} %>
    </div>
  </div>
</div>
